<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="religion_form_view" model="ir.ui.view">
            <field name="name">worker.religion.form</field>
            <field name="model">worker.religion</field>
            <field name="arch" type="xml">
                <form string="Religion">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Type religion"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="religion_list_view" model="ir.ui.view">
            <field name="name">worker.religion.list</field>
            <field name="model">worker.religion</field>
            <field name="arch" type="xml">
                <list string="Religion List">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="religion_act_window" model="ir.actions.act_window">
            <field name="name">Religion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.religion</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No data to list
                </p>
            </field>
        </record>

        <menuitem id="menu_religion" name="Religion"
                  parent="menu_worker_root" action="religion_act_window" groups="worker.group_worker_manager"/>
    </data>
</odoo>