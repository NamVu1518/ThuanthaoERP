<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="district_form_view" model="ir.ui.view">
            <field name="name">worker.district.form</field>
            <field name="model">worker.district</field>
            <field name="arch" type="xml">
                <form string="District">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Type district"/>
                            </h1>
                        </div>

                        <group>
                            <field name="province_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="district_list_view" model="ir.ui.view">
            <field name="name">worker.district.list</field>
            <field name="model">worker.district</field>
            <field name="arch" type="xml">
                <list string="District List">
                    <field name="name"/>
                    <field name="province_id"/>
                </list>
            </field>
        </record>

        <record id="district_act_window" model="ir.actions.act_window">
            <field name="name">District</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.district</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No data to list
                </p>
            </field>
        </record>

        <menuitem id="menu_district" name="District"
                  parent="menu_worker_root" action="district_act_window" groups="worker.group_worker_manager"/>
    </data>
</odoo>