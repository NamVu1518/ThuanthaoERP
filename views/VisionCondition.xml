<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="vision_condition_form_view" model="ir.ui.view">
            <field name="name">worker.vision.condition.form</field>
            <field name="model">worker.vision.condition</field>
            <field name="arch" type="xml">
                <form string="Profile">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Type name of vision condition"/>
                            </h1>
                            <group>
                                <field name="code" placeholder="code"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vision_condition_list_view" model="ir.ui.view">
            <field name="name">worker.vision.condition.list</field>
            <field name="model">worker.vision.condition</field>
            <field name="arch" type="xml">
                <list string="List View Vision Condition">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="vision_condition_act_window" model="ir.actions.act_window">
            <field name="name">Vision Condition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.vision.condition</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Information To View
                </p>
            </field>
        </record>

        <menuitem id="menu_vision_condition"
                  name="Vision Condition"
                  sequence="10"
                  parent="menu_worker_root"
                  action="vision_condition_act_window"
                  groups="worker.group_worker_manager"/>
    </data>
</odoo>