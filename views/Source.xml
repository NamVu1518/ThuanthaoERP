<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="source_form_view" model="ir.ui.view">
            <field name="name">worker.source.form</field>
            <field name="model">worker.source</field>
            <field name="arch" type="xml">
                <form string="Source Form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="source_list_view" model="ir.ui.view">
            <field name="name">worker.source.list</field>
            <field name="model">worker.source</field>
            <field name="arch" type="xml">
                <list string="Source List">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="source_act_window" model="ir.actions.act_window">
            <field name="name">Source</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.source</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Source.
                </p>
            </field>
        </record>

        <menuitem id="menu_source" name="Source"
                  parent="menu_worker_root" action="source_act_window" groups="worker.group_worker_manager"/>
    </data>
</odoo>