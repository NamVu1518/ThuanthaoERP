<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="recruiter_form_view" model="ir.ui.view">
            <field name="name">worker.recruiter.form</field>
            <field name="model">worker.recruiter</field>
            <field name="arch" type="xml">
                <form string="Recruiter">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Type Recruiter"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="recruiter_list_view" model="ir.ui.view">
            <field name="name">worker.recruiter.list</field>
            <field name="model">worker.recruiter</field>
            <field name="arch" type="xml">
                <list string="Recruiter List">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="recruiter_act_window" model="ir.actions.act_window">
            <field name="name">Recruiter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.recruiter</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No data to list
                </p>
            </field>
        </record>

        <menuitem id="menu_recruiter"
                  name="Recruiter"
                  parent="menu_worker_root"
                  action="recruiter_act_window"
                  groups="worker.group_worker_manager"/>
    </data>
</odoo>