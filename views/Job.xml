<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="job_form_view" model="ir.ui.view">
            <field name="name">worker.job.form</field>
            <field name="model">worker.job</field>
            <field name="arch" type="xml">
                <form string="Job">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Type job"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="job_list_view" model="ir.ui.view">
            <field name="name">worker.job.list</field>
            <field name="model">worker.job</field>
            <field name="arch" type="xml">
                <list string="Job List">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="job_act_window" model="ir.actions.act_window">
            <field name="name">Job</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">worker.job</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No data to list
                </p>
            </field>
        </record>

        <menuitem id="menu_job" name="Job"
                  parent="menu_worker_root" action="job_act_window" groups="worker.group_worker_manager"/>
    </data>
</odoo>