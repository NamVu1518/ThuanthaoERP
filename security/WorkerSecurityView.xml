<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="worker_security">
            <field name="name">Worker Security</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_worker_guest" model="res.groups">
            <field name="name">Guest</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="worker_security"/>
        </record>

        <record id="group_worker_sub_manager" model="res.groups">
            <field name="name">Sub Manager</field>
            <field name="category_id" ref="worker_security"/>
            <field name="implied_ids" eval="[(4, ref('group_worker_guest'))]"/>
        </record>

        <record id="group_worker_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="worker_security"/>
            <field name="implied_ids" eval="[(4, ref('group_worker_sub_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


        <record id="sub_manager_record_rule" model="ir.rule">
            <field name="name">Sub Manager: read only approved</field>
            <field name="model_id" ref="model_worker_worker"/>
            <field name="domain_force">[('form_status','=','app')]</field>
            <field name="groups" eval="[(4, ref('group_worker_sub_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        <record id="sub_manager_non_app_full_rule" model="ir.rule">
            <field name="name">Sub Manager: full access non-approved</field>
            <field name="model_id" ref="model_worker_worker"/>
            <field name="domain_force">[('form_status','!=','app')]</field>
            <field name="groups" eval="[(4, ref('group_worker_sub_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


        <record id="manager_record_rule" model="ir.rule">
            <field name="name">Manager: All permission all record</field>
            <field name="model_id" ref="model_worker_worker"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_worker_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>